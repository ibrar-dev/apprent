<%= form_for @changeset, @action, fn f -> %>
<%= if @changeset.action do %>
<div class="alert alert-danger">
  <p>
    Oops, something went wrong! Please check the errors below.
  </p>
</div>
<% end %>


<div class="ml-4 mt-4">
  <div>
    <div class="mb-3 row">
      <div class="d-flex align-items-center nowrap col-sm-3">
        <b>  <%= label f, :description %></b>
      </div>
      <div class="col-sm-4">
        <%= text_input f, :description, class: "form-control" %>
        <%= error_tag f, :description %>
      </div>
    </div>

    <div class="mb-3 row">
      <div class="d-flex align-items-center nowrap col-sm-3">
        <b>  <%= label f, :permission_type %></b>
      </div>
      <div class="col-sm-4">
        <%= select f, :permission_type, permission_type_options(), class: "form-control" %>
        <%= error_tag f, :permission_type %>
      </div>
    </div>

    <div class="mb-3 row">
      <div class="d-flex align-items-center nowrap col-sm-3">
        <b>  <%= label f, :module_id %></b>
      </div>
      <div class="col-sm-4">
        <%= select f, :module_id, module_options(@modules), class: "form-control" %>
        <%= error_tag f, :module_id %>
      </div>
    </div>

    <div class="mb-3 row">
      <div class="col-sm-3">
      </div>
      <div class="col-sm-4">
        <!-- <button type="button" class="btn btn-success">Save</button>
        <button type="button" class="ml-2 btn btn-danger">Cancel</button> -->
        <%= submit "Save", class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
        <% end %>